<div class="py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-speedometer2"></i> IT Dashboard</h2>
        <div>
            <a href="/tickets/list" class="btn btn-outline-primary">View All Tickets</a>
        </div>
    </div>
    
    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card stats-card info h-100 fade-in">
                <div class="card-body text-center">
                    <i class="bi bi-circle-fill text-info" style="font-size: 2.5rem;"></i>
                    <div class="stats-number text-info"><%= stats.byStatus.open || 0 %></div>
                    <div class="stats-label">Open Tickets</div>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-3">
            <div class="card stats-card warning h-100 fade-in" style="animation-delay: 0.1s;">
                <div class="card-body text-center">
                    <i class="bi bi-arrow-clockwise text-warning" style="font-size: 2.5rem;"></i>
                    <div class="stats-number text-warning"><%= stats.byStatus.in_progress || 0 %></div>
                    <div class="stats-label">In Progress</div>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-3">
            <div class="card stats-card success h-100 fade-in" style="animation-delay: 0.2s;">
                <div class="card-body text-center">
                    <i class="bi bi-check-circle-fill text-success" style="font-size: 2.5rem;"></i>
                    <div class="stats-number text-success"><%= stats.byStatus.resolved || 0 %></div>
                    <div class="stats-label">Resolved</div>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-3">
            <div class="card stats-card h-100 fade-in" style="animation-delay: 0.3s;">
                <div class="card-body text-center">
                    <i class="bi bi-archive-fill text-secondary" style="font-size: 2.5rem;"></i>
                    <div class="stats-number text-secondary"><%= stats.byStatus.closed || 0 %></div>
                    <div class="stats-label">Closed</div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Priority Breakdown -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card fade-in" style="animation-delay: 0.4s;">
                <div class="card-header">
                    <h5 class="card-title mb-0"><i class="bi bi-exclamation-triangle-fill"></i> Open Tickets by Priority</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 text-center mb-3">
                            <div class="priority-urgent d-inline-block px-3 py-2 rounded">
                                <h3 class="mb-1"><%= stats.byPriority.urgent || 0 %></h3>
                                <small>URGENT</small>
                            </div>
                        </div>
                        <div class="col-md-3 text-center mb-3">
                            <div class="priority-high d-inline-block px-3 py-2 rounded">
                                <h3 class="mb-1"><%= stats.byPriority.high || 0 %></h3>
                                <small>HIGH</small>
                            </div>
                        </div>
                        <div class="col-md-3 text-center mb-3">
                            <div class="priority-medium d-inline-block px-3 py-2 rounded">
                                <h3 class="mb-1"><%= stats.byPriority.medium || 0 %></h3>
                                <small>MEDIUM</small>
                            </div>
                        </div>
                        <div class="col-md-3 text-center mb-3">
                            <div class="priority-low d-inline-block px-3 py-2 rounded">
                                <h3 class="mb-1"><%= stats.byPriority.low || 0 %></h3>
                                <small>LOW</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Recent Tickets -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">Recent Tickets</h5>
            <a href="/tickets/list" class="btn btn-sm btn-outline-primary">View All</a>
        </div>
        <div class="card-body">
            <% if (recentTickets.length === 0) { %>
                <div class="text-center py-4">
                    <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                    <h5 class="text-muted mt-2">No tickets yet</h5>
                    <p class="text-muted">New tickets will appear here</p>
                </div>
            <% } else { %>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Title</th>
                                <th>Submitter</th>
                                <th>Priority</th>
                                <th>Status</th>
                                <th>Assigned To</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% recentTickets.forEach(ticket => { %>
                                <tr>
                                    <td><strong>#<%= ticket.id %></strong></td>
                                    <td>
                                        <a href="/tickets/<%= ticket.id %>" class="text-decoration-none">
                                            <%= ticket.title %>
                                        </a>
                                    </td>
                                    <td><%= ticket.submitter_name %></td>
                                    <td>
                                        <span class="priority-<%= ticket.priority %>">
                                            <%= ticket.priority.toUpperCase() %>
                                        </span>
                                    </td>
                                    <td>
                                        <span class="status-<%= ticket.status %>">
                                            <%= ticket.status.replace('_', ' ').toUpperCase() %>
                                        </span>
                                    </td>
                                    <td>
                                        <% if (ticket.assigned_to) { %>
                                            <%= ticket.first_name %> <%= ticket.last_name %>
                                        <% } else { %>
                                            <span class="text-muted">Unassigned</span>
                                        <% } %>
                                    </td>
                                    <td><%= new Date(ticket.created_at).toLocaleDateString() %></td>
                                    <td>
                                        <a href="/tickets/<%= ticket.id %>" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } %>
        </div>
    </div>
</div>