<div class="py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-list-ul"></i> All Tickets</h2>
    </div>
    
    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="GET" action="/tickets/list" class="row g-3">
                <div class="col-md-3">
                    <label for="status" class="form-label">Status</label>
                    <select class="form-select" id="status" name="status">
                        <option value="">All Statuses</option>
                        <option value="open" <%= filters.status === 'open' ? 'selected' : '' %>>Open</option>
                        <option value="in_progress" <%= filters.status === 'in_progress' ? 'selected' : '' %>>In Progress</option>
                        <option value="resolved" <%= filters.status === 'resolved' ? 'selected' : '' %>>Resolved</option>
                        <option value="closed" <%= filters.status === 'closed' ? 'selected' : '' %>>Closed</option>
                    </select>
                </div>
                
                <div class="col-md-3">
                    <label for="priority" class="form-label">Priority</label>
                    <select class="form-select" id="priority" name="priority">
                        <option value="">All Priorities</option>
                        <option value="urgent" <%= filters.priority === 'urgent' ? 'selected' : '' %>>Urgent</option>
                        <option value="high" <%= filters.priority === 'high' ? 'selected' : '' %>>High</option>
                        <option value="medium" <%= filters.priority === 'medium' ? 'selected' : '' %>>Medium</option>
                        <option value="low" <%= filters.priority === 'low' ? 'selected' : '' %>>Low</option>
                    </select>
                </div>
                
                <div class="col-md-3">
                    <label for="category" class="form-label">Category</label>
                    <select class="form-select" id="category" name="category">
                        <option value="">All Categories</option>
                        <option value="Hardware" <%= filters.category === 'Hardware' ? 'selected' : '' %>>Hardware</option>
                        <option value="Software" <%= filters.category === 'Software' ? 'selected' : '' %>>Software</option>
                        <option value="Network" <%= filters.category === 'Network' ? 'selected' : '' %>>Network</option>
                        <option value="Email" <%= filters.category === 'Email' ? 'selected' : '' %>>Email</option>
                        <option value="Account" <%= filters.category === 'Account' ? 'selected' : '' %>>Account</option>
                        <option value="Request" <%= filters.category === 'Request' ? 'selected' : '' %>>Request</option>
                        <option value="Other" <%= filters.category === 'Other' ? 'selected' : '' %>>Other</option>
                    </select>
                </div>
                
                <div class="col-md-3">
                    <label for="assigned" class="form-label">Assigned To</label>
                    <select class="form-select" id="assigned" name="assigned">
                        <option value="">All Staff</option>
                        <option value="unassigned" <%= filters.assigned === 'unassigned' ? 'selected' : '' %>>Unassigned</option>
                        <% users.forEach(user => { %>
                            <option value="<%= user.id %>" <%= filters.assigned == user.id ? 'selected' : '' %>>
                                <%= user.first_name %> <%= user.last_name %>
                            </option>
                        <% }); %>
                    </select>
                </div>
                
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-funnel"></i> Filter
                    </button>
                    <a href="/tickets/list" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Clear Filters
                    </a>
                </div>
            </form>
        </div>
    </div>
    
    <!-- Tickets Table -->
    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">
                Tickets (<%= tickets.length %> found)
            </h5>
        </div>
        <div class="card-body">
            <% if (tickets.length === 0) { %>
                <div class="text-center py-4">
                    <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                    <h5 class="text-muted mt-2">No tickets found</h5>
                    <p class="text-muted">Try adjusting your filters or check back later</p>
                </div>
            <% } else { %>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Title</th>
                                <th>Submitter</th>
                                <th>Category</th>
                                <th>Priority</th>
                                <th>Status</th>
                                <th>Assigned To</th>
                                <th>Created</th>
                                <th>Updated</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% tickets.forEach(ticket => { %>
                                <tr>
                                    <td><strong>#<%= ticket.id %></strong></td>
                                    <td>
                                        <a href="/tickets/<%= ticket.id %>" class="text-decoration-none">
                                            <%= ticket.title %>
                                        </a>
                                    </td>
                                    <td>
                                        <%= ticket.submitter_name %><br>
                                        <small class="text-muted"><%= ticket.submitter_email %></small>
                                    </td>
                                    <td><%= ticket.category %></td>
                                    <td>
                                        <span class="priority-<%= ticket.priority %>">
                                            <i class="bi bi-<%= ticket.priority === 'urgent' ? 'exclamation-triangle-fill' : ticket.priority === 'high' ? 'exclamation-circle-fill' : ticket.priority === 'medium' ? 'info-circle-fill' : 'check-circle-fill' %>"></i>
                                            <%= ticket.priority.toUpperCase() %>
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge bg-<%= ticket.status === 'open' ? 'primary' : ticket.status === 'in_progress' ? 'warning' : ticket.status === 'resolved' ? 'success' : 'secondary' %>">
                                            <%= ticket.status.replace('_', ' ').toUpperCase() %>
                                        </span>
                                    </td>
                                    <td>
                                        <% if (ticket.assigned_to) { %>
                                            <%= ticket.first_name %> <%= ticket.last_name %>
                                        <% } else { %>
                                            <span class="text-muted">Unassigned</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <%= new Date(ticket.created_at).toLocaleDateString() %><br>
                                        <small class="text-muted"><%= new Date(ticket.created_at).toLocaleTimeString() %></small>
                                    </td>
                                    <td>
                                        <%= new Date(ticket.updated_at).toLocaleDateString() %><br>
                                        <small class="text-muted"><%= new Date(ticket.updated_at).toLocaleTimeString() %></small>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="/tickets/<%= ticket.id %>" class="btn btn-outline-primary" title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } %>
        </div>
    </div>
</div>