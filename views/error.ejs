<div class="py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 text-center">
            <div class="card">
                <div class="card-body py-5">
                    <i class="bi bi-exclamation-triangle-fill text-warning" style="font-size: 4rem;"></i>
                    
                    <h2 class="mt-3 mb-3"><%= message || 'Something went wrong' %></h2>
                    
                    <% if (error && error.stack && process.env.NODE_ENV === 'development') { %>
                        <div class="alert alert-danger text-start mt-4">
                            <h6>Error Details (Development Mode):</h6>
                            <pre class="mb-0"><%= error.stack %></pre>
                        </div>
                    <% } %>
                    
                    <div class="mt-4">
                        <a href="javascript:history.back()" class="btn btn-secondary me-2">
                            <i class="bi bi-arrow-left"></i> Go Back
                        </a>
                        <a href="/" class="btn btn-primary">
                            <i class="bi bi-house"></i> Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>